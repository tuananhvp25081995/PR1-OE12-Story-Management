<div class="col-md-6 col-md-offset-3">
  <%= form_for @story, url: {controller: "admin/stories", action: action}  do |t| %>
    <%= render "shared/error_messages_story" %>
    <b><%= t ".name" %></b><span class="red">*</span>
    <%= t.text_field :name, class: "form-control" %>
    <b>Name Story</b><span class="red">*</span>
    <%= t.text_field :namestory, class: "form-control" %>
    <%= t.label :image %>
    <span class="picture">
      <%= t.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </span>
    <b><%= t ".describe" %></b><span class="red">*</span>
    <%= t.text_field :describe, class: "form-control" %>
    <b><%= t ".author" %></b><span class="red">*</span>
    <%= t.select :author_id, author, class: "form-control" %>
    <%= t.submit "submit", class: "btn btn-primary" %>
  <% end %>
  <div class="condition"><b>* <%= t ".blank"%></b></div>
</div>
