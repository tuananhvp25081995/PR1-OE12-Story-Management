<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header title">List Stories</h2>
  </div>
</div>
<%= link_to new_admin_story_path, class: "btn btn-success" do %>
  <i class="fa fa-plus"></i> Add
<% end %>
<hr>
<table class="table table-hover table-bordered datatable">
  <thead class="text-center">
    <tr>
      <th class="col-md-3">Tên thể loại</th>
      <th class="col-md-3">Tên truyện</th>
      <th class="col-md-3">Ảnh</th>
      <th class="col-md-3">Tên tác giả</th>
      <th class="col-md-3">Tên member</th>
      <th class="col-md-3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr class="odd gradeX">
        <td><%= story.namestory %>
        <td><%= story.name %></td>
        <td><%= image_tag story.image.url %></td>
        <td><%= story.author.name %></td>
        <td><%= story.member.name %></td>
        <td>
          <%= link_to edit_admin_story_path(story), class: "btn btn-success" do %>
            <i class="fa fa-pencil"></i> edit
          <% end %>
          <%= link_to admin_story_path(story), method: :delete,
            data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
              <i class="fa fa-trash"></i> delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
