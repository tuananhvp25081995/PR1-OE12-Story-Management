<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header title">List Member</h2>
  </div>
</div>
<hr>
<table class="table table-hover table-bordered datatable">
  <thead class="text-center">
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-3">Email</th>
      <th class="col-md-3">Admin</th>
      <th class="col-md-3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr class="odd gradeX">
        <td><%= member.name %>
        <td><%= member.email %></td>
        <td><%= member.admin %></td>
        <td>
          <%= link_to edit_admin_member_path(member), class: "btn btn-success" do %>
            <i class="fa fa-pencil"></i> edit
          <% end %>
          <% if current_member.admin? && !current_member?(member) %>
          <%= link_to admin_member_path(member), method: :delete,
            data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
              <i class="fa fa-trash"></i> delete
          <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
